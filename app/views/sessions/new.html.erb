<body class="view">
  <h2 style="padding-top: 20px">Login</h2>

  <%= form_tag '/login' do %>
    <div>
      <div>
        <label>Email:</label>
        <%= text_field_tag :email %>
      </div>

      <br>
      <div>
        <label>Password:</label>
        <%= password_field_tag :password %>
      </div>
    </div>
    <br>
    <%= submit_tag "Log in", class: "btn btn-primary" %> <br>

  <% end %>
</body>
